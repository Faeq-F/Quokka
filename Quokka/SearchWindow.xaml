    </Window.Resources>

    <Grid VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="SearchWindowGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">

            <Border
                    x:Name="EntryField"
                    BorderBrush="#FF000000"
                    BorderThickness="1"
                    CornerRadius="32"
                    Background="White"
                    Height="64"
                    Width="720"
                    VerticalAlignment="Top"
                    >

                <Grid>

                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="656*"/>
                            <ColumnDefinition Width="64*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="SearchIcon" Width="64" Grid.Column="1"/>

                        <ui:TextBox
                            PlaceholderText="Enter Query"
                            Foreground="Black"
                            Height="50"
                            MinWidth="720"
                            Width="720"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            x:Name="SearchTermTextBox"
                            Margin="10"
                            Cursor="IBeam"
                            FontFamily="Cascadia Code"
                            MaxLines="1"
                            AutoWordSelection="True"
                            Background="Transparent"
                            VerticalContentAlignment="Center"
                            SpellCheck.IsEnabled="True"
                            Language="en-US"
                            TextChanged="onQueryChange"
                            FontSize="24"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            PreviewKeyDown="SearchTermTextBox_KeyDown"
                            >
                            <TextBox.ContextMenu>
                                <ContextMenu Visibility="Hidden"/>
                            </TextBox.ContextMenu>
                        </ui:TextBox>

                    </Grid>

                </Grid>

            </Border>

        </Grid>

        <Grid Grid.Row="2" Margin="0,74,0,0" VerticalAlignment="Top" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="720*"/>
            </Grid.ColumnDefinitions>

            <Border
                x:Name="ResultsBox"
                BorderBrush="#FF000000"
                BorderThickness="1"
                CornerRadius="15"
                Background="White"
                MinHeight="64"
                Height="auto"
                Width="720"
                >
                <ListView x:Name="ResultsListView" Margin="10,10,10,10" SelectionMode="Single"  KeyboardNavigation.DirectionalNavigation="Cycle" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid PreviewMouseLeftButtonUp="listItem_Click">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="9*"/>
                                </Grid.ColumnDefinitions>
                                <Image Height="50" Width="50" Grid.Column="0" Source="{Binding icon}"/>
                                <Grid Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="7*" />
                                        <RowDefinition Height="3*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding name}"
                                        FontFamily="Cascadia Code" FontSize="18" VerticalAlignment="Bottom"/>
                                    <TextBlock Grid.Row="1" Text="{Binding description}"
                                        FontFamily="Cascadia Code" FontSize="12" VerticalAlignment="Top"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            <Frame x:Name="ContextPane"></Frame>
        </Grid>
    </Grid>
</Window>
