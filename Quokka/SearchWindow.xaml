        mc:Ignorable="d"
        Title="Quokka"
        Topmost="True"
        AllowsTransparency="True"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="False"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=SearchTermTextBox}">

