<Application
  x:Class="Quokka.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
  DispatcherUnhandledException="Application_DispatcherUnhandledException"
  ShutdownMode="OnExplicitShutdown">
  <Application.Resources>
    <!--
      Note that this application does not have a StartupUri declared, so no Window is automatically loaded.
      Also, the ShutdownMode was set to explicit, so we have to close the application programmatically
    -->
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/TrayTask/NotifyIconResources.xaml" />
        <ResourceDictionary Source="pack://application:,,,/XamlFlair.WPF;component/DefaultAnimations.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>